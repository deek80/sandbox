[core]
	autocrlf = input
[user]
	name = my name
	email = my@email.com
[alias]
	history = log --color --graph --pretty=format:'%C(red)%h%C(yellow)%d %C(reset)%s %C(green)%cr %C(cyan)%an %C(reset)' --abbrev-commit
	f = fetch --all -p
	ff = !git fetch main && git pull --ff-only main master
	st = !git branch -vv && git status --short
	scrap = !git reset -q --hard HEAD && git clean -qfd
	lastmerge = rev-list --merges -n1 HEAD
	h = !git log $(git lastmerge)..
	r = !git rebase -i $(git lastmerge)
	ping = !git ls-remote -h &>/dev/null
	up = reset HEAD^
[push]
	default = upstream
[diff]
	compactionHeuristic = true
[pager]
	diff = diff-highlight | less
	log = diff-highlight | less
	show = diff-highlight | less
